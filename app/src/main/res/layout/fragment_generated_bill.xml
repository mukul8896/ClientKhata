<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mukul.client_billing_activity.ClientDataActivity"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bill_listview"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="@android:integer/status_bar_notification_info_maxnum"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GENERATE BILL"
        android:id="@+id/generate_bill_btn"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/drawable_add_transec_btn"
        android:textSize="@dimen/add_transection_button_text" />
</LinearLayout>
