<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply_filter"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15sp"
        android:textColor="@color/client_list_balane"
        android:layout_marginBottom="15sp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_interval"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/blue_grey_900"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/month_of_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginEnd="5sp"/>
        <Spinner
            android:id="@+id/year_of_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_type"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10sp"
        android:textColor="@color/text_black"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_of_filter"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="10sp"
            android:id="@+id/apply_filter"
            android:textSize="20dp"
            android:textColor="@color/debit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="10sp"
            android:id="@+id/remove_filter"
            android:textSize="20dp"
            android:textColor="@color/debit"/>
    </LinearLayout>
</LinearLayout>